@using VendorOrderTracker.Models
@{
  Layout = "_Layout";
}
@if (@Model.Count == 0)
{
  <h3>No Vendors Have Been Added Yet</h3>
} 
@foreach (Vendor vendor in Model)
{
  <h3>@vendor.Name</h3>
  <form action="/vendors/@vendor.Id" method="get">
  <button type="submit" name="button" class="btn btn-primary">Vendor Details</button>
  </form>
}
<form action="/vendors/new" method="get">
  <button type="submit" name="button" class="btn btn-primary">Add Vendor</button>
</form>